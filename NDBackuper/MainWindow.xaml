<Window x:Class="NDBackuper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:aw="clr-namespace:AvalonWizard;assembly=AvalonWizard"
        Title="Wintriss Database Backuper" 
        Height="600"
        Width="540" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >
    <Grid x:Name="gridMain">
        <aw:Wizard x:Name="wzdMain" aw:Designer.PageIndex="1">
           
            <aw:WizardPage Name="wzdPage1" Header="Source Configurations">
            </aw:WizardPage>
            <!--/Page 1-->
           
            <aw:WizardPage Name="wzdPage2" Header="Choose Tables for Backup">
            </aw:WizardPage>
            <!--/Page 2-->
           
            <aw:WizardPage Name="wzdPage3" Header="Destination Configurations">
            </aw:WizardPage>
            <!--/Page 3-->

            <aw:WizardPage Name="wzdPage4" Header="Database Name and Date Range">
            </aw:WizardPage>
            <!--/Page 4-->

            <aw:WizardPage Name="wzdPage5" Header="Progress">
            </aw:WizardPage>
            <!--/Page 5-->
        </aw:Wizard>
    </Grid>
</Window>
